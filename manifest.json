{
	"author": "uusama",
	"name": "Chrome Extension Tools.",
	"version": "1.0",
	"manifest_version": 3,
	"description": "Some tools for chrome, like filter ad.",
	"icons": {
        "128": "image/icon_128.png",
        "48": "image/icon_48.png",
        "32": "image/icon_32.png",
        "16": "image/icon_16.png"
	},
	"offline_enabled": true,
	"background": {
		"service_worker": "background.js"
	},
	"action": {
		"default_popup": "page/popup.html",
		"default_icon": {
			"128": "image/icon_128.png",
			"48": "image/icon_48.png",
			"32": "image/icon_32.png",
			"16": "image/icon_16.png"
		}
	},
	"options_page": "page/options.html",
	"content_scripts": [
		{
			"matches": ["*://*/*"],
			"run_at": "document_idle",
			"all_frames": true,
			"match_about_blank": true,
			"js": ["common/function.js"]
		},
		{
			"matches": ["*://*.zhihu.com/*"],
			"js": ["content/zhihu.js"]
		},
		{
			"matches": ["*://*.qingwk.com/*"],
			"js": ["content/qingwk.js"]
		},
		{
			"matches": ["*://*.jj20.com/*"],
			"js": ["content/jj20.js"]
		},
		{
			"matches": ["*://*.j9p.com/*"],
			"js": ["content/j9p.js"]
		},
		{
			"matches": ["*://*.fandom.com/*", "*://*.360doc.com/*", "*://www.sass.hk/*", "*://tophub.today/*"],
			"js": ["content/optimise-ui.js"]
		},
		{
			"matches": ["*://*.xvideos.com/*", "*://*.pornlulu.com/*", "*://*.pornhub.com/*", "*://*.jable.tv/*",
				"*://*.missav.com/*", "*://*.njav.tv/*", "*://*.javhub.net/*", "*://*.supjav.com/*"],
			"js": ["content/m3u8-extract.js"]
		},
		{
			"matches": ["*://*.blog.csdn.net/*"],
			"js": ["content/csdn.js"]
		},
		{
			"matches": ["*://*/*"],
			"js": ["content/hsck.js"]
		},
		{
		  "matches": ["*://*.bilibili.com/*"],
		  "run_at": "document_idle",
		  "all_frames": true,
		  "match_about_blank": true,
		  "js": ["content/bilibili.js"]
		}
	],
	"permissions": [
		"storage", "activeTab", "scripting", "notifications", "downloads", "bookmarks", "contextMenus",
		"webNavigation", "cookies", "webRequest"
  ],
	"host_permissions": ["<all_urls>"],
	"homepage_url": "http://uusama.com"
}