{
	"author": "youyou",
	"name": "Chrome Tools Extension",
	"version": "1.0",
	"manifest_version": 2,
	"description": "Some tools for chrome when I am using.",
	"icons": {
        "128": "image/icon_128.png",
        "48": "image/icon_48.png",
        "32": "image/icon_32.png",
        "16": "image/icon_16.png"
	},
	"offline_enabled": true,
	"browser_action": {
		"default_icon": {
			"128": "image/icon_128.png",
			"48": "image/icon_48.png",
			"32": "image/icon_32.png",
			"16": "image/icon_16.png"
		},
		"default_title": "Chrome Tools",
		"default_popup": "popup.html"
	},
	"background": {
		"scripts": ["js/background.js"]
	},
	"content_scripts": [
		{
			"matches": ["http://*/*", "https://*/*"],
			"run_at": "document_idle",
			"all_frames": true,
			"match_about_blank": true,
			"js": ["js/jquery.min.js", "js/complete.js"]
		},
		{
			"matches": ["http://www.zhihu.com/question/*", "https://www.zhihu.com/question/*"],
			"run_at": "document_idle",
			"all_frames": true,
			"match_about_blank": true,
			"js": ["js/zhihu_hide_bar.js"]
		},
		{
			"matches": ["https://www.sass.hk/docs/*", "https://www.sass.hk/*"],
			"run_at": "document_idle",
			"all_frames": true,
			"match_about_blank": true,
			"js": ["js/sass_bar_hide.js"]
		},
		{
			"matches": ["https://www.qingwk.com/*", "https://qingwk.com/*"],
			"run_at": "document_idle",
			"all_frames": true,
			"match_about_blank": true,
			"js": ["js/qingwk_hide_ad.js"]
		}
	],
	"permissions": [
		"background", "geolocation", "management", "topSites", "bookmarks", "unlimitedStorage", "topSites", "identity",
		"http://*/*", "https://*/*", "chrome://favicon/", "history", "contextMenus",
		"alarms", "notifications", "tabs", "storage", "activeTab",
		"declarativeContent", "webNavigation", "webRequest", "webRequestBlocking", "cookies"
	],
	"homepage_url": "http://uusama.com"
}