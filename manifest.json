{
	"author": "uusama",
	"name": "Chrome Extension Sample Tools.",
	"version": "1.0",
	"manifest_version": 3,
	"description": "Some simple tools for chrome.",
	"icons": {
        "128": "image/icon_128.png",
        "48": "image/icon_48.png",
        "32": "image/icon_32.png",
        "16": "image/icon_16.png"
	},
	"offline_enabled": true,
	"background": {
		"service_worker": "background.js"
	},
	"action": {
		"default_popup": "popup.html",
		"default_icon": {
			"128": "image/icon_128.png",
			"48": "image/icon_48.png",
			"32": "image/icon_32.png",
			"16": "image/icon_16.png"
		}
	},
	"options_page": "options.html",
	"content_scripts": [
		{
			"matches": ["http://*/*", "https://*/*"],
			"run_at": "document_idle",
			"all_frames": true,
			"match_about_blank": true,
			"js": ["common/function.js"]
		},
		{
			"matches": ["*://*.zhihu.com/*"],
			"run_at": "document_idle",
			"all_frames": true,
			"match_about_blank": true,
			"js": ["content/zhihu_hide_bar.js"]
		},
		{
			"matches": ["https://www.sass.hk/docs/*", "https://www.sass.hk/*"],
			"run_at": "document_idle",
			"all_frames": true,
			"match_about_blank": true,
			"js": ["content/sass_bar_hide.js"]
		},
		{
			"matches": ["https://www.qingwk.com/*", "https://qingwk.com/*"],
			"run_at": "document_idle",
			"all_frames": true,
			"match_about_blank": true,
			"js": ["content/qingwk_hide_ad.js"]
		},
		{
			"matches": ["http://www.jj20.com/*", "https://www.jj20.com/*", "http://jj20.com/*"],
			"run_at": "document_idle",
			"all_frames": true,
			"match_about_blank": true,
			"js": ["content/jj20_picture_download.js"]
		}
	],
	"permissions": [
		"storage", "activeTab", "scripting", "notifications", "downloads", "bookmarks", "contextMenus",
		"webNavigation", "cookies"
	],
	"homepage_url": "http://uusama.com"
}